@model Trifo_Inventory_Management_.Models.Inventory

@{
    
    ViewBag.Title = "AddToInventory";
}

<head>


    <title>@ViewBag.Title - Your App Name</title>
    <link href="~/Content/invstl.css" rel="stylesheet" />
</head>

@using (Html.BeginForm("AddToInventory", "Inventory", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
@Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Inventory</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <h3>Product Name</h3>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Product_name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Product_name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <h3>Category</h3>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Product_Category, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Product_Category, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <h3>Price</h3>
        <div class="col-md-10">
            <input type="number" name="Price" class="form-control" value="">
            <span class="text-danger"></span>
        </div>
    </div>



    <div class="form-group">
        <h3>Buy Datetime</h3>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Buy_DateTime, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Buy_DateTime, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        <h3>Quantity</h3>
        <div class="col-md-10">
            <input type="number" name="Quantity" class="form-control" value="">
            <span class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <h3>UploadPicture <br> </h3>
        <div class="col-md-10">
            <input type="file" name="file" />
            <span class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <h3>Description</h3>
        <div class="col-md-10">
            <textarea id="description" name="description" class="form-control" rows="5"></textarea>
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add To Inventory" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
